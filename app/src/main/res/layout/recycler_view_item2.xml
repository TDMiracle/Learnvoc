<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/review_cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp">
<LinearLayout
    android:id="@+id/word_book_linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/config_margin_10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/word_book_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/word_book_yinbiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/config_margin_2dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/word_book_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/config_margin_2dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>