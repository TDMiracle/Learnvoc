<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_book_linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/config_margin_10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/word_book_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/word_book_yinbiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/config_margin_2dp"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/word_book_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/config_margin_2dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <View
        android:id="@+id/line_spilt"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#90909090"
        android:layout_height="2dp" />
</LinearLayout>