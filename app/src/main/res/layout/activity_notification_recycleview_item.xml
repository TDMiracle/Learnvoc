<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:visibility="gone"
        android:id="@+id/check_not_itme"
        android:layout_marginLeft="@dimen/config_margin_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_nottitle_item"
        android:paddingRight="5dp"
        android:text="学习周报"
        android:layout_toRightOf="@+id/check_not_itme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/config_margin_10dp"
        android:layout_marginTop="@dimen/config_margin_10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/text_notcontent_item"
        android:paddingRight="@dimen/config_margin_5dp"
        android:text="每周很重要~快来查收你上周得学习周报O(∩_∩)O"
        android:layout_alignLeft="@+id/text_nottitle_item"
        android:layout_below="@+id/text_nottitle_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/config_margin_10dp"
        />

    <TextView
        android:id="@+id/text_nottime_item"
        android:layout_below="@+id/text_notcontent_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/config_margin_5dp"
        android:layout_marginTop="@dimen/config_margin_5dp"
        android:layout_marginBottom="@dimen/config_margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="两天前"
        />

    <View
        android:layout_below="@+id/text_nottime_item"
        android:layout_marginTop="@dimen/config_margin_2dp"
        android:background="@color/xui_config_color_gray_1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp">

    </View>
</RelativeLayout>