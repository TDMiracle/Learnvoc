<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@color/UI_recite"
    >

    <LinearLayout
        android:paddingTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/word_recite_frag_tip"
                android:background="@drawable/ic_word_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/word_recite_frag_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="abandon"
                android:textSize="@dimen/word_big"
                />
            <ImageView
                android:id="@+id/word_recite_frag_fav"
                android:background="@drawable/word_add_fav_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/word_recite_frag_yinbiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="英 [əˈbændən]   美 [əˈbændən] "
            android:textSize="@dimen/word_middle"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/word_recite_frag_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="VERB 离弃；遗弃；抛弃"
            android:textSize="@dimen/word_middle"
            android:visibility="invisible"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/config_margin_20dp"
        android:layout_marginRight="@dimen/config_margin_20dp"
        android:layout_marginTop="@dimen/config_margin_20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/word_recite_frag_btn_know"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_18"
            android:layout_height="50dp"
            android:text="我认识"
            />
        <Button
            android:id="@+id/word_recite_frag_btn_notice"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/tipOrNotKonw"
            android:layout_marginTop="@dimen/config_margin_10dp"
            android:text="完全一摸黑"
            android:textSize="@dimen/sp_18" />
        <Button
            android:id="@+id/word_recite_frag_btn_master"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/xui_config_color_red"
            android:layout_marginTop="@dimen/config_margin_10dp"
            android:textSize="@dimen/sp_18"
            android:text="记得非常好" />
    </LinearLayout>

</LinearLayout>