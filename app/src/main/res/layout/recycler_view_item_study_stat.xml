<androidx.cardview.widget.CardView
    android:id="@+id/static_wordBook_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/static_wordBook_bookImg"
            android:layout_marginTop="@dimen/config_margin_5dp"
            android:layout_marginLeft="@dimen/config_margin_10dp"
            android:layout_marginBottom="@dimen/config_margin_5dp"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/liuji"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/config_margin_5dp"
            android:layout_marginLeft="@dimen/config_margin_5dp"
            android:layout_marginBottom="@dimen/config_margin_5dp"
            android:layout_marginRight="@dimen/config_margin_10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/static_wordBook_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="六级词汇CET-6"
                android:textColor="@color/colorPrimary"

                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="学习进度："
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/static_wordBook_finishCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="36"
                    android:textSize="14sp"
                    />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="/"
                android:textSize="14sp"
                />
                <TextView
                    android:id="@+id/static_wordBook_totalWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="3666"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <com.xuexiang.xupdate.widget.NumberProgressBar
                android:id="@+id/static_wordBook_bar"
                android:layout_marginTop="@dimen/config_margin_10dp"
                android:layout_marginLeft="@dimen/config_margin_5dp"
                android:layout_marginRight="@dimen/config_margin_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="最近学习："
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/static_wordBook_updateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="2021-05-31"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="添加时间："
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/static_wordBook_addTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"

                    android:text="2021-01-01"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>